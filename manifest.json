{
    "manifest_version": 2,
    "name": "ChatGPT/Claude Box Expander",
    "version": "1.0",
    "description": "Expand the ChatGPT or Claude box to your desired width",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "icons": {
      "16": "icons/bear-16.png",
      "32": "icons/bear-32.png",
      "48": "icons/bear-48.png",
      "128": "icons/bear-128.png"
    }
  }